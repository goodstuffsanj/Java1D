<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- This is the styling for action bar -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorPrimary">@color/primary_material_dark</item>
        <item name="android:colorPrimaryDark">@color/primary_dark_material_dark</item>
        <item name="android:colorBackground">@color/background_material_dark</item>
        <item name="android:textColorPrimary">@color/base</item>
        <item name="android:textColorSecondary">@color/base</item>
        <item name="android:navigationBarColor">@color/colorAccent</item>
    </style>


    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/colorPrimaryDark</item>
        <item name="titleTextStyle">@style/MyActionBarTitle</item>
    </style>

    <style name="MyActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>
    <!-- Customize your theme here. -->
    <style name="mytoast">
        <item name="colorBackground">#d15e5e</item>
        <item name="textColor">#ffffff</item>
        <item name="iconLeft">@drawable/ic_search</item>
        <item name="strokeColor">#ec0f0f</item>
        <item name="strokeWidth">2dp</item>
    </style>


</resources>
